---
import { Icon } from 'astro-icon/components';

const socialLinks = [
  { href: 'https://github.com/juampere', label: 'GitHub', icon: 'mdi:github' },
  { href: 'https://www.linkedin.com/in/juamperez/', label: 'LinkedIn', icon: 'mdi:linkedin' },
  { href: 'mailto:jcperezdot@gmail.com', label: 'Email', icon: 'mdi:email' },
  { href: 'https://wa.me/5493489356690', label: 'WhatsApp', icon: 'mdi:whatsapp' }
];

export interface Props {
  size?: number;
}
const { size = 8 } = Astro.props;

// Creamos un mapa para asociar el número del tamaño con la clase de Tailwind real.
const sizeClasses: { [key: number]: string } = {
  6: 'size-6',
  8: 'size-8',
  10: 'size-10',
  12: 'size-12',
};

// Buscamos la clase correspondiente al tamaño. Si no la encuentra, usa 'size-8' por defecto.
const iconClass = sizeClasses[size] || 'size-8';
---
<div class="flex justify-center items-center gap-x-6">
  {socialLinks.map(link => (
    <a 
      href={link.href} 
      target="_blank" 
      rel="noopener noreferrer" 
      aria-label={link.label}
      class="text-yellow-500 hover:text-yellow-600 transition-colors"
    >
      <Icon name={link.icon} class={iconClass} />
    </a>
  ))}
</div>